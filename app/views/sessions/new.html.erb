<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">

      <h1 class="text-center">Log In</h1>
      <h2><%= flash[:notice] %></h2>
      <%= form_tag new_session_path do %>
        <div class="form-group row">
          <%= label_tag :email %>
          <%= text_field_tag :email, nil, class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= label_tag :password %>
          <%= text_field_tag :password, nil, class: "form-control" %>
        </div>

        <div class="actions row justify-content-end">
          <%= submit_tag "Log In", class: "btn btn-primary col-4"%>
        </div>
      <% end %>

    </div>
  </div>
</div>