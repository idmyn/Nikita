<p id="notice"><%= notice %></p>
<div class="container">

  <div class="row justify-content-center">
      <h1 class="text-center">Ideas</h1><br>
  </div>

  <% if current_user %>
    <div class="row justify-content-center">
      <h2 class="text-center"><%= link_to 'New', new_idea_path %></h2>
    </div>
  <% end %>

  <% @ideas.reverse.each do |idea| %>
    <div class="row justify-content-center">
      
        <%= render 'idea', idea: idea %>
     
    </div>
    
  <% end %>

</div>



    

    

    
  





