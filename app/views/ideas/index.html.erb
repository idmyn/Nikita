<p id="notice"><%= notice %></p>

<h1>Ideas</h1><br>

<% if current_user %>
<%= link_to 'New Idea', new_idea_path %><br><br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @ideas.reverse.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.body %></td>
        <td><%= link_to idea.user_id, idea.user %></td>
        <td><%= link_to 'Show', idea %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


