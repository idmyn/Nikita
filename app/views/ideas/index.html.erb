<p id="notice"><%= notice %></p>
<div class="container">

  <div class="row justify-content-center">
      <h1 class="text-center">Ideas</h1><br>
  </div>

  <% if current_user %>
    <div class="row justify-content-center mb-4">
      <h2 class="text-center"><%= link_to 'New', new_idea_path %></h2>
    </div>
  <% end %>

  <% Idea.idea_pairs.each do |idea_pair| %>

    <div class="row justify-content-center card-deck">
      <% idea_pair.each do |idea| %>
      <div class="col-6-md row-sm">
        <%= render 'idea', idea: idea if idea %>
      </div>
      <% end %>
    </div>

  <% end %>
</div>
